<%- include('./partials/header') %>

<div class="max-w-2xl mx-auto mt-10 bg-white shadow-md rounded-md p-6">
  <h2 class="text-xl font-semibold mb-4">Edit Profile</h2>

  <form action="/account/edit" method="POST" enctype="multipart/form-data" class="space-y-4">

    <div>
      <label class="block mb-1 font-medium">Full Name</label>
      <input type="text" name="fullname" value="<%= user.fullname %>" class="w-full px-4 py-2 border rounded" required />
    </div>

    <div>
      <label class="block mb-1 font-medium">Phone</label>
      <input type="text" name="phone" value="<%= user.phone %>" class="w-full px-4 py-2 border rounded" />
    </div>

    <div>
      <label class="block mb-1 font-medium">Profile Picture</label>
      <% if (user.picture) { %>
        <img src="<%= user.picture %>" class="h-20 mb-2 rounded" />
      <% } %>
      <input type="file" name="avatar" class="w-full" />
    </div>

    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Save Changes</button>
  </form>
</div>

<%- include('./partials/footer') %>
