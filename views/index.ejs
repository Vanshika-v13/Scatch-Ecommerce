<%-include('./partials/header') %>

<% if (error && error.length > 0) { %>
  <div id="errorFlash" class="fixed top-3 left-1/2 transform -translate-x-1/2 bg-red-500 text-white text-sm px-6 py-3 rounded-md shadow-md z-50 animate-fade-in flex items-center justify-between gap-4 min-w-[300px]">
    <span><%= error[0] %></span>
    <button onclick="document.getElementById('errorFlash').remove()" class="text-white hover:text-gray-200 text-lg leading-none">&times;</button>
  </div>
<% } %>

<% if (success && success.length > 0) { %>
  <div id="successFlash" class="fixed top-3 left-1/2 transform -translate-x-1/2 bg-green-500 text-white text-sm px-6 py-3 rounded-md shadow-md z-50 animate-fade-in flex items-center justify-between gap-4 min-w-[300px]">
    <span><%= success[0] %></span>
    <button onclick="document.getElementById('successFlash').remove()" class="text-white hover:text-gray-200 text-lg leading-none">&times;</button>
  </div>
<% } %>

<div class="min-h-screen grid md:grid-cols-2 bg-white font-sans">

  <!-- Left Promo Section -->
  <div class="relative bg-gradient-to-tr from-gray-900 to-gray-800 text-white p-10 flex flex-col justify-center">
    <div class="max-w-md mx-auto">
      <h1 class="text-5xl font-extrabold mb-4 leading-tight text-yellow-400">
        Welcome to <span class="text-white">Scatch</span>
      </h1>
      <p class="text-lg font-light mb-6 text-gray-200">
        Explore timeless designs and luxury watches curated just for you.
      </p>
      <ul class="space-y-2 text-sm text-gray-300">
        <li class="flex items-center gap-2">ðŸ•’ Premium watches from top brands</li>
        <li class="flex items-center gap-2">ðŸ”’ 100% secure checkout</li>
        <li class="flex items-center gap-2">ðŸ’¬ Friendly support 24/7</li>
      </ul>
    </div>
  </div>

  <!-- Right Form Section -->
  <div class="flex items-center justify-center bg-gray-50 px-8 py-16">
    <div class="w-full max-w-md space-y-12">

      <!-- Sign Up -->
      <div>
        <h2 class="text-2xl font-semibold text-gray-800 mb-6">Create your Scatch account</h2>
        <form action="/users/register" method="POST" class="space-y-4">
          <input type="text" name="fullname" placeholder="Full Name"
            class="w-full px-4 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-yellow-400 focus:outline-none">
          <input type="email" name="email" placeholder="Email"
            class="w-full px-4 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-yellow-400 focus:outline-none">
          <input type="password" name="password" placeholder="Password"
            class="w-full px-4 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-yellow-400 focus:outline-none">
          <input type="submit" value="Sign Up"
            class="w-full bg-yellow-500 hover:bg-yellow-600 transition text-white py-3 rounded-full font-semibold">
        </form>
      </div>

      <!-- Divider -->
      <div class="flex items-center justify-between">
        <hr class="w-full border-gray-300">
        <span class="px-3 text-gray-400">OR</span>
        <hr class="w-full border-gray-300">
      </div>

      <!-- Login -->
      <div>
        <h2 class="text-2xl font-semibold text-gray-800 mb-6">Already have a Scatch account?</h2>
        <form action="/users/login" method="POST" class="space-y-4">
          <input type="email" name="email" placeholder="Email"
            class="w-full px-4 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-gray-800 focus:outline-none">
          <input type="password" name="password" placeholder="Password"
            class="w-full px-4 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-gray-800 focus:outline-none">
          <input type="submit" value="Login"
            class="w-full bg-gray-800 hover:bg-black transition text-white py-3 rounded-full font-semibold">
        </form>
      </div>

    </div>
  </div>
</div>

