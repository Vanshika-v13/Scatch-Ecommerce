<%- include('./partials/header') %>

<div class="p-8 font-sans">
  <h2 class="text-2xl font-bold mb-4 text-green-700">Order Placed, Thank You!</h2>
  <p class="mb-4 text-gray-700">Confirmation will be sent to your email.</p>

  <div class="bg-gray-100 p-4 rounded mb-6">
    <p><strong>Shipping to:</strong> <%= user.fullname %>, <%= address.address %>, <%= address.city %>, <%= address.state %> - <%= address.pincode %></p>
    <p><strong>Delivery Date:</strong> <%= deliveryDate.toDateString() %></p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <% if (fromOrderId) { %>
      <% order.products.forEach(item => { %>
        <div class="flex gap-4 items-center bg-white shadow p-4 rounded">
          <img src="<%= item.product.image %>" class="w-28 h-28 object-contain rounded border" />
          <div>
            <p class="text-lg font-semibold"><%= item.product.name %></p>
            <p class="text-sm text-gray-600">Quantity: <%= item.quantity %></p>
          </div>
        </div>
      <% }) %>
      <div class="text-right text-lg font-semibold mt-4 text-green-700 col-span-full">
        Total Paid: ₹<%= order.totalAmount %>
      </div>
    <% } else { %>
      <% products.forEach(item => { %>
        <div class="flex gap-4 items-center bg-white shadow p-4 rounded">
          <img src="<%= item.image %>" class="w-28 h-28 object-contain rounded border" />
          <div>
            <p class="text-lg font-semibold"><%= item.name %></p>
            <p class="text-sm text-gray-600">Quantity: <%= item.quantity %></p>
          </div>
        </div>
      <% }) %>
      <div class="text-right text-lg font-semibold mt-4 text-green-700 col-span-full">
        Total Paid: ₹<%= totalAmount %>
      </div>
    <% } %>
  </div>

  <!-- Continue Shopping Button -->
  <div class="mt-8 text-center">
    <a href="/shop" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium px-6 py-3 rounded-md transition">
      Continue Shopping
    </a>
  </div>
</div>

<%- include('./partials/footer') %>
